			<form action="/updateJobPost" method="post">
			    <input type="hidden" name="id" value="<%=locals.jobToEdit.jobGUID%>">
				<input type="text" name="category" placeholder="category" value="<%=locals.jobToEdit.jobCategory%>">
				<input type="text" name="title" placeholder="Job Title" value="<%=locals.jobToEdit.jobTitle%>">
				<input type="text" name="description" placeholder="Job Description" value="<%=locals.jobToEdit.jobDescription%>">
				<input type="text" name="deadline" placeholder="Deadline" value="<%=locals.jobToEdit.deadLine%>">
				

